<a href="<%= feature.guide_path %>" class="feature_preview <%= 'isnt_stable' unless feature.stable? %> is_<%= feature.visibility %>">

  <span class="feature_preview__kind" title="<%= feature.long_kind %>"><%= feature.short_kind %></span>

  <div class="feature_preview__title">
    <span class="feature_preview__signature"><%= h(feature.signature) %></span>
    <% if feature.visibility.present? && feature.visibility != 'stable' %>
      <span class="feature_preview__visibility">
        <span class="tag isnt_stable">
          <%= feature.visibility %>
        </span>
      </span>
    <% end %>
  </div>

  <% if feature.summary_markdown.present? %>
    <div class="feature_preview__summary">
      <%= markdown_prose(feature.summary_markdown, strip_links: true) %>
    </div>
  <% end %>

</a>
