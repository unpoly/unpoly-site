<% menu do %>
  <div class="menu__title">Changes</div>

  <div class="menu__nodes">
    <div class="node">
      <%= node_link "Overview", "/changes" %>
    </div>

    <div class="node">
      <%= node_link "Upgrading", "/changes/upgrading" %>
    </div>

    <% guide.releases.each do |release| %>
      <div class="node">
        <% node_link "/changes/#{release.version}" do %>
          <span class="node__title">
            Version <%= release.version %>
          </span>

          <% if (commit_count = release.commit_count) %>
            <span class="node__dots"></span>
            <% node_meta do %>
              <span class="node__commit_count" title="<%= pluralize(commit_count, 'commit', 'commits') %>">
                <%= commit_count %>
                <i class="fa fa-gg"></i>
              </span>
            <% end %>
          <% end %>

        <% end %>
      </div>
    <% end %>
  </div>
<% end %>
